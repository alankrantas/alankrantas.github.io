{
	"name": "alankrantas.github.io",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"upgrade-all": "yarn-upgrade-all && yarn upgrade",
		"dev": "vite dev --port 3000 --open --host",
		"preview": "vite preview --port 8080 --open --host",
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"start": "yarn dev",
		"serve": "open-cli http://localhost:8080 && yarn preview",
		"pull": "git pull origin main",
		"push": "git add . && git commit -m \"Updating\" && git push origin main",
		"commit": "yarn pull && yarn format && yarn push",
		"docker-build": "docker build . -t alankrantas.github.io -f Dockerfile",
		"docker-run": "open-cli http://localhost:8080 && docker run -d -p 8080:8080 --rm alankrantas.github.io",
		"docker-stop": "docker stop $(docker ps -f ancestor=alankrantas.github.io -q)",
		"docker": "yarn docker-build && yarn docker-run"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "^1.20.1",
		"@typescript-eslint/eslint-plugin": "^5.59.9",
		"@typescript-eslint/parser": "^5.59.8",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"open-cli": "^7.2.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^3.59.1",
		"svelte-check": "^3.4.3",
		"svelte-preprocess": "^5.0.4",
		"svelte-simple-modal": "^1.5.2",
		"tslib": "^2.5.3",
		"typescript": "^5.1.3",
		"vite": "^4.3.9",
		"yarn-upgrade-all": "^0.7.2"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/noto-sans-tc": "^5.0.2",
		"@fontsource/open-sans": "^5.0.2",
		"@fontsource/playfair-display": "^5.0.2",
		"@fontsource/space-mono": "^5.0.2",
		"bootstrap": "^5.3.0"
	}
}
